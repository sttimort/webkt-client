{
    "compilerOptions": {
        "outDir": "./dist",
        "checkJs": true,
        "module": "ES6",
        "target": "ES6",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "removeComments": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strict": true
    }
}